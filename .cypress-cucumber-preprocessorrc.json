{
  "json": {
    "enabled": true,
    "output": "json-logs/report.json",
    "formatter": "json-formatter/cucumber-json-formatter"
  },
  "messages": {
    "enabled": true,
    "output": "json-logs/messages.ndjson"
  },
  "html": {
    "enabled": true,
    "output": "reports/report.html"
  },
  "stepDefinitions": [
    "[filepath]/**/*.{js,ts}",
    "[filepath].{js,ts}",
    "cypress/e2e/step_definitions/*.{js,ts}",
    "[filepath]\\***.{js,ts}",
    "[filepath].{js,ts}",
    "cypress\\e2e\\step_definitions\\*.{js,ts}"
  ]
}
